.steps-action {
  display: flex;
  align-items: center;
  justify-content: center;
}
.steps-action .ant-btn-primary {
  margin-left: 0.4rem !important;
}
.register_col {
  background-color: #fff;
  margin-top: 1rem;
  min-height: calc(100vh - 24rem);
  display: flex;
  justify-content: center;
}
.register_col .register_container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60%;
  height: auto;
  justify-content: center;
}
.register_col .register_container .ant-divider span {
  font-size: 30px;
}
.register_col .register_container .register_box {
  text-align: center;
  margin-top: 6.25rem;
  flex: 0 0 70%;
  width: 50%;
}
.register_col .register_container .register_box .ant-avatar {
  margin-bottom: 1.25rem;
}
.register_col .register_container .register_box .avatar_box {
  text-align: center;
  margin-bottom: 0.625rem;
}
.register_col .register_container .register_box .ant-row.ant-form-item {
  justify-content: center;
}
.register_col .register_container .register_box .ant-form-explain {
  text-align: left;
}
.register_col .register_container .ant-divider-horizontal.ant-divider-with-text-center::before,
.register_col .register_container .ant-divider-horizontal.ant-divider-with-text-left::before,
.register_col .register_container .ant-divider-horizontal.ant-divider-with-text-right::before,
.register_col .register_container .ant-divider-horizontal.ant-divider-with-text-center::after,
.register_col .register_container .ant-divider-horizontal.ant-divider-with-text-left::after,
.register_col .register_container .ant-divider-horizontal.ant-divider-with-text-right::after {
  border-top: 1px solid #b6b6b6;
}
